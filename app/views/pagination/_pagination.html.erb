<ul class="pagination center">
  <% if (page_number - 1) > 0 %>
    <li>
      <%= link_to user_path(user, page: page_number - 1) do %>
        <i class="fa fa-angle-left"></i>
      <% end %>
    </li>
  <% end %>

  <% (1..total_pages).each do |number| %>
    <li class="waves-effect"><%= link_to number, user_path(user, page: number) %></li>
  <% end %>

  <% if (page_number + 1) <= total_pages %>
    <li>
      <%= link_to user_path(user, page: page_number + 1) do %>
        <i class="fa fa-angle-right"></i>
      <% end %>
    </li>
  <% end %>
</ul>
