<h1 class='center-align'>Sign Up</h1>

<div class="row">
  <div class="col s1 m1 l3"></div>
  <%= form_with(model: @user, local:true, class:"col s10 m10 l6") do |form| %>
    <div class="row">
      <div class="input-field col s12 m6">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, required: true, class:"validate" %>
      </div>

      <div class="input-field col s12 m6">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, required: true, class:"validate" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= form.label :email %>
        <%= form.email_field :email, required: true, class:"validate" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= form.label :password %>
        <%= form.password_field :password, required: true, minlength: 5, class:"validate" %>
      </div>
    </div>

    <div class="col s12">
      <%= form.submit 'save', class:'btn waves-effect waves-light row' %>
    </div>

  <% end %>
  <div class="col s1 m1 l3"></div>

</div>
