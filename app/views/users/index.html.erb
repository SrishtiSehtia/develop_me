<div class="header">
    <div class="header-wrapper db">
      <div class="header-title" style="text-align:center;">
        <h1 class="blue-text">Mentors+</h1>
        <!-- Dropdown Trigger -->
        <a class='dropdown-button btn' href='#' data-activates='dropdown1' style="text-align:center;">Filter By</a>
        <!-- Dropdown Structure -->
        <ul id='dropdown1' class='dropdown-content'>
          <li><a href="#!">one</a></li>
          <li><a href="#!">two</a></li>
          <li><a href="#!">three</a></li>
          <li><a href="#!">four</a></li>
          <li><a href="#!">five</a></li>
        </ul>
      </div>
    </div>
    <!-- Fixed Masonry Filters -->
    <div class="categories-wrapper af lighten-1"></div>
</div>
    <!-- Gallery -->
  <div>
    <div id="gallery">
      <div class="profile-container" style="display:flex; justify-content:space-around;">
        <div class="profile-cards">
          <div class="gallery-item" >

            <div class="row" style="display:inline-block;">
            <% @users.each do |user| %>
            <!--  each user layout-->

                  <div class="col s12 m4 l3">
                    <div class="card blue-grey darken-1">

                      <div class="card-image">
                        <img src="/assets/images/empty_profile.jpg">
                      </div>

                      <div class="card-content white-text">
                        <span class="card-title"><%= user.full_name %></span>
                        <p>A little about me...</p>
                      </div>
                      <div class="card-action">
                        <%= link_to "View", user_path(user) %>
                        <a href="#">This is a link</a>
                      </div>
                    </div>
                  </div>
            <% end %>
          </div>
          </div>

        </div>
      </div>
    </div>
  </div>
