<h3 class="center-align">Contact Us</h3>
<div class="row">
  <div class="col s1 m1 l3"></div>
  <%= form_with(scope: :email, url: '/contact_us', local:true, class:"col s10 m10 l6") do |form| %>
    <div class="row">
      <div class="input-field col s12 m6">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, required: true, class:"validate" %>
      </div>

      <div class="input-field col s12 m6">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, required: true, class:"validate" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= form.label :email %>
        <%= form.email_field :email, required: true, class:"validate" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= form.label :message %>
        <%= form.text_field :message %>
      </div>
    </div>

    <div class="col s12 center-align materialize-textarea">
      <%= form.submit 'send', class:'btn waves-effect waves-light row' %>
    </div>

  <% end %>
  <div class="col s1 m1 l3"></div>

</div>
